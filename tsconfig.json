{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": false,
      "target": "es2015",
      "outDir": "lib",
      "declaration": true,
      "declarationDir": "lib",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "paths": {
        "abstraction": ["abstraction"],
        "decoration": ["decoration"],
        "globalization": ["globalization"]
      }
    },
    "include": ["src/index.ts"],
    "exclude": []
}